<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
    
    <!-- 검사 URL -->
    <http use-expressions="true">
        <intercept-url pattern="/login/loginForm" access="permitAll" />
        <intercept-url pattern="/idfind" access="permitAll" />
        <intercept-url pattern="/idfindafter" access="permitAll" />
        <intercept-url pattern="/pwfind" access="permitAll" />
        <intercept-url pattern="/pwchange" access="permitAll" />
        <intercept-url pattern="/changenotice" access="permitAll" />
        <intercept-url pattern="/signupgo" access="permitAll" />
        <intercept-url pattern="/" access="permitAll" />
        <intercept-url pattern="/signupcomplete" access="permitAll" />
        <intercept-url pattern="/commonhome" access="permitAll" />
        <intercept-url pattern="/signup" access="permitAll" />
        <intercept-url pattern="/checking" access="permitAll" />
        <intercept-url pattern="/admin/**" access="hasRole('ADMIN')" />
        <intercept-url pattern="/**" access="hasAnyRole('USER, ADMIN')" />
        
        <form-login login-page="/login/loginForm"
                    default-target-url="/successcommonhome"
                    authentication-failure-url="/login/loginForm?error"
                    username-parameter="mmid"
                    password-parameter="mmpwd" />
        <logout logout-url="/logout"
                logout-success-url="/"/>
                
        <access-denied-handler error-page="/login/accessDenied"/>
    </http>
    
    <!--  provider  -->
    <authentication-manager>
        <authentication-provider>
            <!--  
            <user-service>
                <user name="user" password="password" authorities="ROLE_USER" />
                <user name="admin" password="password" authorities="ROLE_ADMIN" />
            </user-service>
            -->
            <jdbc-user-service data-source-ref="dataSource"
            	users-by-username-query="SELECT mmid AS userName,mmpwd AS password,enabled FROM member where mmid = ?"
            	authorities-by-username-query = "SELECT mmid AS userName, authority FROM member WHERE mmid = ?"/>
        </authentication-provider>
    </authentication-manager>
    
</beans:beans>