<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ram.boardex.mappers.menuMapper">

	<select id = "getMenuList" resultType = "com.ram.boardex.board.MenuVO">
		select
			mno,
			code,
			codename,
			sort_num,
			comments
			from tbl_menu
			order by sort_num desc, code asc	
	</select>
	
	<insert id ="insertMenu" parameterType ="com.ram.boardex.board.MenuVO">
		
		insert into tbl_menu(mno,code,codename,sort_num,comments,reg_dt)
		values(
			mno_add.nextval,
			#{code},
			#{codename},
			#{sort_num},
			#{comments},
			
			sysdate
		)
	
	</insert>
	
	<update id ="updateMenu" parameterType="com.ram.boardex.board.MenuVO">
	update tbl_menu set
	codename =#{codename},
	comments=#{comments},
	sort_num=#{sort_num}
	where code = #{code}
	</update>
	
	<delete id = "deleteMenu" parameterType="String">
		delete from tbl_menu
		where code =#{code}
	</delete>
	

</mapper>